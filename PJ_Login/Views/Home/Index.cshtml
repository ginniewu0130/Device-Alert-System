@{
    ViewData["Title"] = "Home Page";  
    
}
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/home.css" rel="stylesheet" />

<div class="container-wrapper">
    <div class="homecontainer">
        <h2>帳號管理</h2>
        <img src="~/images/accountmanage.png" />
        <button id="accountmanageButton" class="accountmanage">進入</button>
    </div>
    <div class="homecontainer">
        <h2>資料視覺化</h2>
        <img src="~/images/datavision.png" />
        <button id="datavisionButton" class="datavision">進入</button>
        
    </div>
</div>
<script> 
    document.getElementById('datavisionButton').addEventListener('click', function () {
        window.location.href = '@Url.Action("Chart", "Chart")';
    });
    document.getElementById('accountmanageButton').addEventListener('click', function () {
        window.location.href = '@Url.Action("AccountManage", "Login")';
    });
</script>